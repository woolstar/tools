
CC=gcc
CFLAGS= -Iinc -Igen -Iart -I. -I../render -g

.SUFFIXES: .cpp
.cpp.o:
	$(CXX) $(CFLAGS) -c $<

CORE=y_core.o y_setup.o y_camera.o y_mem.o y_geom.o y_light.o y_surf.o y_surface.o y_image.o y_math.o
MAIN=yzor.cpp

LIBS=-L../lib/aart -L../lib/general -L../render -lrender -laart -lgeneral -lm

yzor: $(MAIN) $(CORE)
	$(CXX) $(CFLAGS) $(MAIN) $(CORE) $(LIBS) -o $@

setup:
	ln -s ../lib/include inc
	ln -s ../lib/general gen
	ln -s ../lib/aart art

