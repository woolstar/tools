
CC=gcc
CFLAGS= -Iinc -Igen -Iart -I. -I../render -g

.SUFFIXES: .cpp
.cpp.o:
	$(CXX) $(CFLAGS) -c $<

CORE=y_core.o
MAIN=yzor.cpp

LIBS=-L../lib/aart -L../lib/general -laart -lgeneral -lm

yzor: $(MAIN) $(CORE)
	$(CXX) $(CFLAGS) $(MAIN) $(CORE) $(LIBS) -o $@

setup:
	ln -s ../lib/include inc
	ln -s ../lib/general gen
	ln -s ../lib/aart art

